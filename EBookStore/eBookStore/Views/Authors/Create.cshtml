@model BusinessObject.DTO.AuthorDTO
<div id="content">
    <div id="content-left">
        <h3>Dashboard</h3>
        <ul>
            <a asp-controller="booksAuthors" asp-action="index">
            <li>All books - authors</li></a>
            <a asp-controller="authors" asp-action="index">
            <li>All authors</li></a>
            <a asp-controller="books" asp-action="index">
            <li>All books</li></a>
            <a asp-controller="publishers" asp-action="index">
            <li>All publisher</li></a>
            <a asp-controller="users" asp-action="index">
            <li>All users</li></a>
        </ul>
    </div>
    <div id="content-right">
        <div class="path-admin">CREATE A NEW AUTHOR</b></div>
        <div class="content-main">
            @using (Html.BeginForm("Create", "Authors", FormMethod.Post, new { @id = "content-main-product" }))
            {
                <div class="content-main-1">
                    <label>FirstName (*):</label><br />
                    @Html.TextBoxFor(m => m.FirstName)<br />
                    <label>LastName (*):</label><br />
                    @Html.TextBoxFor(m => m.LastName)<br />
                    <label>Email (*):</label><br />
                    @Html.TextBoxFor(m => m.EmailAddress)<br />
                </div>
                <div class="content-main-1">
                    <label>City (*):</label><br />
                    @Html.TextBoxFor(m => m.City)<br />
                    <label>State (*):</label><br />
                    @Html.TextBoxFor(m => m.State)<br />
                    <label>Address (*):</label><br />
                    @Html.TextBoxFor(m => m.Address)<br />
                </div>
                <div class="content-main-1">
                    <label>Phone (*):</label><br />
                    @Html.TextBoxFor(m => m.Phone)<br />
                    <label>Zip (*):</label><br />
                    @Html.TextBoxFor(m => m.Zip)<br />
                    <input type="submit" value="SAVE" />
                </div>
            }
        </div>
    </div>
</div>
