@model BusinessObject.DTO.AuthorDTO
<div id="content">
    <div id="content-left">
        <h3>Dashboard</h3>
        <ul>
            <a asp-controller="booksAuthors" asp-action="index">
            <li>All books - authors</li></a>
            <a asp-controller="authors" asp-action="index">
            <li>All authors</li></a>
            <a asp-controller="books" asp-action="index">
            <li>All books</li></a>
            <a asp-controller="publishers" asp-action="index">
            <li>All publisher</li></a>
            <a asp-controller="users" asp-action="index">
            <li>All users</li></a>
        </ul>
    </div>
    <div id="content-right">
        <div class="path-admin">UPDATE A AUTHOR</b></div>
        <div class="content-main">
            @using (Html.BeginForm("Edit", "Authors", FormMethod.Post, new { @id = "content-main-product" }))
            {
                <div class="content-main-1">
                    @Html.HiddenFor(m => m.AuthorId, new { @class = "hidden" })
                    <label>FirstName (*):</label><br />
                    @Html.TextBoxFor(m => m.FirstName, new { value = Model.FirstName})<br />
                    <label>LastName (*):</label><br />
                    @Html.TextBoxFor(m => m.LastName, new { value = Model.LastName})<br />
                    <label>Email (*):</label><br />
                    @Html.TextBoxFor(m => m.EmailAddress, new { value = Model.EmailAddress})<br />
                </div>
                <div class="content-main-1">
                    <label>City (*):</label><br />
                    @Html.TextBoxFor(m => m.City, new { value = Model.City})<br />
                    <label>State (*):</label><br />
                    @Html.TextBoxFor(m => m.State, new { value = Model.State})<br />
                    <label>Address (*):</label><br />
                    @Html.TextBoxFor(m => m.Address, new { value = Model.Address})<br />
                </div>
                <div class="content-main-1">
                    <label>Phone (*):</label><br />
                    @Html.TextBoxFor(m => m.Phone, new { value = Model.Phone})<br />
                    <label>Zip (*):</label><br />
                    @Html.TextBoxFor(m => m.Zip, new { value = Model.Zip})<br />
                    <input type="submit" value="SAVE" />
                </div>
            }
        </div>
    </div>
</div>
