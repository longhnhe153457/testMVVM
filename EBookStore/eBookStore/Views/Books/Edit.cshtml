@model BusinessObject.DTO.CreateUpdateBookDTO
<div id="content">
    <div id="content-left">
        <h3>Dashboard</h3>
        <ul>
            <a asp-controller="booksAuthors" asp-action="index">
            <li>All books - authors</li></a>
            <a asp-controller="authors" asp-action="index">
            <li>All authors</li></a>
            <a asp-controller="books" asp-action="index">
            <li>All books</li></a>
            <a asp-controller="publishers" asp-action="index">
            <li>All publisher</li></a>
            <a asp-controller="users" asp-action="index">
            <li>All users</li></a>
        </ul>
    </div>
    <div id="content-right">
        <div class="path-admin">UPDATE A BOOK</b></div>
        <div class="content-main">
            @using (Html.BeginForm("Edit", "Books", FormMethod.Post, new { @id = "content-main-product" }))
            {
                <div class="content-main-1">
                    @Html.HiddenFor(m => m.BookId, new { @class = "hidden" })
                    <label>Title (*):</label><br />
                    @Html.TextBoxFor(m => m.Title, new { value = Model.Title})<br />
                    <label>Type (*):</label><br />
                    @Html.TextBoxFor(m => m.Type, new { value = Model.Type})<br />
                    <label>Note :</label><br />
                    @Html.TextBoxFor(m => m.Notes, new { value = Model.Notes})<br />
                </div>
                <div class="content-main-1">
                    <label>Price (*):</label><br />
                    @Html.TextBoxFor(m => m.Price, new { value = Model.Price})<br />
                    <label>Advance (*):</label><br />
                    @Html.TextBoxFor(m => m.Advance, new { value = Model.Advance})<br />
                    <label>Royalty (*):</label><br />
                    @Html.TextBoxFor(m => m.Royalty, new { value = Model.Royalty})<br />
                </div>
                <div class="content-main-1">
                    <label>YtdSales (*):</label><br />
                    @Html.TextBoxFor(m => m.YtdSales)<br />
                    <label>Publishers (*):</label><br />
                    <select asp-for="@Model.PubId" asp-items="@(new SelectList(ViewBag.Pub, "PubId", "PublisherName"))" class="form-control"></select>
                    <label>PublishDate (*):</label><br />
                    <input type="date" asp-for="@Model.PublishedDate" value="@ViewData["PublishedDate"]" /><br />
                    <input type="submit" value="SAVE" />
                </div>
            }
        </div>
    </div>
</div>
