@model BusinessObject.DTO.CreateUpdateBookAuthorDTO
<div id="content">
    <div id="content-left">
        <h3>Dashboard</h3>
        <ul>
            <a asp-controller="booksAuthors" asp-action="index">
            <li>All books - authors</li></a>
            <a asp-controller="authors" asp-action="index">
            <li>All authors</li></a>
            <a asp-controller="books" asp-action="index">
            <li>All books</li></a>
            <a asp-controller="publishers" asp-action="index">
            <li>All publisher</li></a>
            <a asp-controller="users" asp-action="index">
            <li>All users</li></a>
        </ul>
    </div>
    <div id="content-right">
        <div class="path-admin">UPDATE A BOOK - AUTHOR</b></div>
        <div class="content-main">
            @using (Html.BeginForm("Edit", "BooksAuthors", FormMethod.Post, new { @id = "content-main-product" }))
            {
                <div class="content-main-1">
                    @Html.Hidden("book", new { @class = "hidden", value = Model.BookId })
                    @Html.Hidden("author", new { @class = "hidden", value = Model.AuthorId })
                    <label>Book (*):</label><br />
                    <select asp-for="@Model.BookId" asp-items="@ViewBag.Books" class="form-control"></select>
                    <label>Author (*):</label><br />
                    <select asp-for="@Model.AuthorId" asp-items="@ViewBag.Authors" class=" form-control"></select>
                </div>
                <div class="content-main-1">
                    <label>AuthorOrder (*):</label><br />
                    @Html.TextBoxFor(m => m.AuthorOrder, new { value = Model.AuthorOrder})<br />
                    <label>RoyalityPercentage (*):</label><br />
                    @Html.TextBoxFor(m => m.RoyalityPercentage, new { value = Model.RoyalityPercentage})<br />
                    <input type="submit" value="SAVE" />
                </div>
            }
        </div>
    </div>
</div>
