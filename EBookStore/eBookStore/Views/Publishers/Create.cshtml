@model BusinessObject.DTO.PublisherDTO
<div id="content">
    <div id="content-left">
        <h3>Dashboard</h3>
        <ul>
            <a asp-controller="authors" asp-action="index">
            <li>All authors</li></a>
            <a asp-controller="books" asp-action="index">
            <li>All books</li></a>
            <a asp-controller="publishers" asp-action="index">
            <li>All publisher</li></a>
            <a asp-controller="users" asp-action="index">
            <li>All users</li></a>
        </ul>
    </div>
    <div id="content-right">
        <div class="path-admin">CREATE A NEW PUBLISHER</b></div>
        <div class="content-main">
            @using (Html.BeginForm("Create", "Publishers", FormMethod.Post, new { @id = "content-main-product" }))
            {
                <div class="content-main-1">
                    <label>PublisherName (*):</label><br />
                    @Html.TextBoxFor(m => m.PublisherName)<br />
                    <label>Country (*):</label><br />
                    @Html.TextBoxFor(m => m.Country)<br />
                </div>
                <div class="content-main-1">
                    <label>City (*):</label><br />
                    @Html.TextBoxFor(m => m.City)
                    <label>State (*):</label><br />
                    @Html.TextBoxFor(m => m.State)
                    <input type="submit" value="SAVE" />
                </div>
            }
        </div>
    </div>
</div>
